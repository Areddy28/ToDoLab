@model Employee

<h2>Edit @Model.Name</h2>

<form action="Edit" method="post">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" value="@Model.Name" />
    <span asp-validation-for="Name" class="text-danger"></span>

    <label asp-for="HoursAvailable" class="control-label"></label>
    <input asp-for="HoursAvailable" class="form-control" value="@Model.HoursAvailable" />
    <span asp-validation-for="HoursAvailable" class="text-danger"></span>

    <label asp-for="Title" class="control-label"></label>
    <input asp-for="Title" class="form-control" value="@Model.Title" />
    <span asp-validation-for="Title" class="text-danger"></span>

    
    <input type="hidden" asp-for="Id" class="form-control" value="@Model.Id" />


    <input type="submit" />

</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
